{% extends 'base.html.twig' %}

{% block title %}{{ (app.request.attributes.get('_route')|titlePage) }}{% endblock %}

{% block body %}
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
                <div class="row pt-md-5 mt-md-3 mb-5 align-items-center">
                    <div class="col-12 mb-4">
                        <h3 class="text-center mb-3"> Menu table</h3>
                        <table class="table table-striped bg-light text-center">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Position</th>
                                    <th>Created</th>
                                    <th>Updated</th>
                                    <th>Enabled</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for menu in crmMenus %}
                                <tr>
                                    <td>{{ menu.id }}</td>
                                    <td>{{ menu.title }}</td>
                                    <td>{{ menu.position }}</td>
                                    <td>{{ menu.createdAt|date('Y-m-d H:m') }}</td>
                                    <td>{{ menu.updatedAt|date('Y-m-d H:m') }}</td>
                                    <td>{{ menu.enabled ? 'Yes' : 'No' }}</td>
                                    <td>
                                        <button type="button" class="btn btn-primary">
                                            <i class="fa fa-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-danger">
                                            <i class="fa fa-remove"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="col-12">

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}